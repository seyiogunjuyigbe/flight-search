<div class="container">
    <form action="/flights" onsubmit="dateValidate()" method="GET">
                 <div class="form-row">
                      <div class="col-md-3 mb-3">
                        <label for="depCity">Departure City</label>
                        <input type="text" class="form-control" pattern="[a-zA-Z]+" oninvalid="setCustomValidity('Please enter the city code e.g LOS. ')" style="text-transform: uppercase;"  maxlength="3" name="departure_city" id="depCity" placeholder="Departure City" required>
                        <div class="valid-feedback">
                          Looks good!
                        </div>
                        <div class="invalid-feedback">
                                Please enter a valid city code e.g LND.
                              </div>
                      </div>
                      <div class="col-md-3 mb-3">
                        <label for="destCity">Destination City</label>
                        <input type="text" class="form-control" id="destCity" pattern="[a-zA-Z]+" oninvalid="setCustomValidity('Please enter the city code e.g LOS. ')" style="text-transform: uppercase;" maxlength="3" name="destination_city" placeholder="Destination City" required>
                        <div class="valid-feedback">
                          Looks good!
                        </div>
                        <div class="invalid-feedback">
                                Please enter a valid city code e.g LND.
                              </div>
                      </div>
                      <div class="col-md-3 mb-3">
                        <label for="depDate">Departure Date</label>
                        <div class="input-group">
                          
                          <input type="date" class="form-control" id="depDate" onchange="dateValidate()" placeholder="Departure Date" name="departure_date" aria-describedby="inputGroupPrepend3" required>
                          <div class="valid-feedback">
                                Looks good!
                              </div>
                          <div class="invalid-feedback">
                            Please choose a valid date
                          </div>
                        </div>
                      </div>
                      <div class="col-md-3 mb-3">
                            <label for="retDate">Return Date</label>
                            <div class="input-group">
                              <input type="date" class="form-control " id="retDate" placeholder="Return Date" name="return_date" aria-describedby="inputGroupPrepend3" required>
                              <div class="valid-feedback">
                                    Looks good!
                                  </div>
                              <div class="invalid-feedback">
                                Please choose a valid date
                              </div>
                            </div>
                          </div>
                    </div>
                    <div class="form-row">
                            <div class="col-md-3 mb-3">
                                    <label for="cabinClass">Cabin Class</label>
                                    <select class="form-control" name="cabin" id="cabinClass" required>
                                        <option value=""> - Select Cabin Class - </option>
                                        <option value="First">First</option>
                                        <option value="Economy">Economy</option>
                                        <option value="Premium">Premium</option>
                                        <option value="Business">Business</option>
                                        <option value="All">All</option>
                                    </select>
                                    <div class="valid-feedback">
                                      Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                            Please select a cabin class.
                                          </div>
                                  </div>
                                  <div class="col-md-3 mb-3">
