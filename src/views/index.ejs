<script>
const depDate = document.querySelector("#depDate");
const retDate = document.querySelector("#retDate");
function dateValidate (){
    const today = new Date (Date.now())
if (new Date(depDate.value) < today){
return false;
} else if(new Date(retDate.value) < new Date(depDate.value)){
return false;
}
return true
}

const depCity = document.querySelector("#depCity");
const destCity = document.querySelector("#destCity");

depCity.oninput=function(event){
	event.target.setCustomValidity('');
	}
depCity.onchange=function(event){
	event.target.setCustomValidity('');
	}
destCity.oninput =function(event){
	event.target.setCustomValidity('');
    }
destCity.onchange =function(event){
	event.target.setCustomValidity('');
    }

</script>